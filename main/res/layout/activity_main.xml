<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jota.simonj.MainActivity">

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/iniciar"
        android:onClick="empezar"
        android:text="Iniciar"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:onClick="colorClick"
            android:layout_column="0"
            android:id="@+id/rojo_btn"
            android:layout_margin="20px"
            android:layout_gravity="center"
            android:background="@color/rojoApagado"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="colorClick"
            android:layout_margin="20px"
            android:layout_column="2"
            android:id="@+id/amarillo_btn"
            android:layout_gravity="center"
            android:background="@color/amarilloApagado"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20px"
            android:layout_column="1"
            android:id="@+id/azul_btn"
            android:onClick="colorClick"
            android:layout_row="1"
            android:layout_gravity="center"
            android:background="@color/azulApagado"/>

        <Button
            android:layout_width="100dp"
            android:layout_margin="20px"
            android:onClick="colorClick"
            android:layout_height="100dp"
            android:layout_row="2"
            android:id="@+id/rosa_btn"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="@color/rosaApagado"/>

        <Button
            android:layout_width="100dp"
            android:layout_margin="20px"
            android:layout_row="2"
            android:onClick="colorClick"
            android:layout_column="2"
            android:id="@+id/verde_btn"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/verdeApagado"/>

    </GridLayout>

</LinearLayout>
